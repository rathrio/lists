<div style="text-align: center;">
  <h2>Check out the <%= @item.year %> <%= @item.list.name.downcase.singularize %> "<%= @item.name %>"</h2>

  <img src="<%= @cover_url %>" alt="<%= @item.name %>" style="object-fit: cover; border-radius: 5px;">

  <p>
    <strong>Description:</strong> <span><%= @item.description %></span>
  </p>

  <% if @item.notes.present? %>
    <p>
      <strong>Notes:</strong> <span><%= @item.notes %></span>
    </p>
  <% end %>

  <p>
    <strong>Tags:</strong> <span><%= @item.tags.join(", ") %></span>
  </p>

  <p>
    <strong>Language:</strong> <span><%= @item.language %></span>
  </p>
</div>