<section class="section">
  <div class="container label-form">
    <%= form_for @label do |f| %>
      <%= f.label 'Name', class: 'label' %>
      <p class="control">
        <%= f.text_field :name, class: 'input' %>
      </p>

      <%= f.label 'Icon', class: 'label' %>
      <p class="control has-addons">
        <%= f.text_field :fa_icon, class: 'input' %>
        <a class="button" href="#">
          <span class="icon">
            <%= fa_icon f.object.fa_icon %>
          </span>
        </a>
      </p>

      <%= f.label 'Scraper', class: 'label' %>
      <p class="control">
        <span class="select">
          <%= f.select :scraper, options_for_select(Scraper.all.map { |e| [e, e] }) , include_blank: 'Select Scraper' %>
        </span>
      </p>

      <%= f.submit 'Update', class: 'button is-success' %>
    <% end %>
  </div>
</section>
