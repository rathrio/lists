<div class="box">
  <div class="level is-mobile">
    <div class="level-left">
      <div class="level-item">
        <span class="icon">
          <%= fa_icon label.fa_icon %>
        </span>
      </div>

      <div class="level-item">
        <div class="title is-4"><%= link_to label, edit_label_path(label) %></div>
      </div>

      <div class="level-item">
        <span class="tag is-dark">
          <%= label.items.count %>
        </span>
      </div>
    </div>

    <div class="level-right">
      <div class="level-item">
        <span class="icon is-medium">

          <%= link_to label, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= fa_icon "trash" %>
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>
